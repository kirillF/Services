<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.mail.park.advandroid.helloword.lection2">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StartActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LayoutActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ListViewArrayAdapterActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ListViewBaseAdapterActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ThreadActivity"
            android:label="@string/threads_label" />
        <activity android:name=".UIElements" />

        <activity android:name=".RecyclerActivity" />
        <activity android:name=".LoaderActivity"/>

        <activity android:name=".ServiceActivity" />
        <activity android:name="FragmentActivity" />
        <activity android:name=".WebViewActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <data android:scheme="http" android:host="mail.ru" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>

        <service android:name=".CommandService" />
        <service android:name=".TestService" />

    </application>

</manifest>